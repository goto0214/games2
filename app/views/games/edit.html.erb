<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>編集画面</h2>
      <%= form_with model:@game, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control title", placeholder: "※必須" %>
      </div>
      <div class="form-group">
        <%= f.label :genre %>
        <%= f.text_field :genre, class: "form-control genre", placeholder: "※必須" %>
      </div>
      <div class="form-group">
        <%= f.label :detail %>
        <%= f.text_area :detail, class: "form-control detail", rows: "5" %>
      </div>
      <div class="btn-wrapper col-12 mx-auto">
        <div class="form-group row">
          <%= f.submit "変更", class: "btn btn-secondary btn-block" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>