<table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Genle</th>
            <th>Detail</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% games.each do |game| %>
          <tr>
            <td class="col-1">
              <%= link_to user_path(game.user) do %>
                <%= attachment_image_tag game.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %>
              <% end %>
            </td>
            <td>
              <%= link_to game.title, game_path(game) %>
            </td>
            <td>
              <%= game.genre %>
            </td>
            <td class="text-truncate" style="max-width: 350px">
              <%= game.detail %>
            </td>
            <td>
              <% if game.favorited_by?(current_user) %>
                <p>
                  <%= link_to game_favorites_path(game), method: :delete do %>
                    ♥<%= game.favorites.count %>いいね
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to game_favorites_path(game), method: :post do %>
                    ♡<%= game.favorites.count %>いいね
                  <% end %>
                </p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>