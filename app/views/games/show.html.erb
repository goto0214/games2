<<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @user %>
      <%= render "games/form", game: @create %>
    </div>
    <div class="col-md-9">
      <h2>詳細</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@game.user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 75, 75, fallback: "no_image.jpg" %><br>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= @game.title %>
          </td>
          <td>
            <%= @game.genre %>
          </td>
          <% if @game.user == current_user %>
          <td>
            <%= link_to "編集", edit_game_path(@game), class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "削除", game_path(@game), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
          </td>
          <% end %>
        </tr>
      </table>
      <div>
      <%= @game.detail %>
      </div>
    </div>
  </div>
</div>