<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<th>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationship_path(user.id), method: :delete, class: "btn-sm btn-danger fas fa-user-minus" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn-sm btn-success fas fa-user-plus" %>
    <% end %>
  <% end %>
</th>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>
        フォロー：<%= user.following_user.count %>
      </th>
      <th>
        フォロワー：<%= user.follower_user.count %>
      </th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
    <span class="fas fa-user-cog"></span>
  <% end %>
</div>